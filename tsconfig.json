{
   "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "rootDir": "./src/scripts",
      "outDir": "./dist/assets/scripts",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
   },
   "include": [
      "./src/scripts/**/*"
   ],
   "exclude": [
      "node_modules"]
}